# Production Environment Variables Template
# NEVER commit the actual .env.production file to version control!

# Database Configuration
DATABASE_HOSTNAME=postgres
DATABASE_PORT=5432
DATABASE_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DATABASE_NAME=fastapi_social_app_db
DATABASE_USERNAME=postgres

# JWT Configuration
SECRET_KEY=CHANGE_THIS_GENERATE_NEW_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=production
DEBUG=false

# Production Notes:
# 1. Generate strong SECRET_KEY: openssl rand -hex 32
# 2. Use a strong database password (min 16 chars, alphanumeric + symbols)
# 3. Never expose this file or commit it to version control
# 4. Consider using Docker Secrets or cloud secret managers for production
